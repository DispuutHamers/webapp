<% content_for :title do %>
  Vergaderingen
<% end %>
<table id="meeting" class="tablesorter table table-hover">
  <thead>
    <tr>
      <th>datum</th>
      <th>onderwerp</th>
      <% if current_user.admin? %>
        <th>Admin stuff</th>
      <% end %>
    </tr>
  </thead>
  <%= will_paginate %>
  <tbody>
    <% @meetings.each do |m| %>
      <tr>
        <td><%= m.date.strftime('%d-%m-%Y') %></td>
        <td><%= link_to m.onderwerp, m %></td>
        <% if current_user.admin? %>
          <td>
            <div class="btn-group">
              <%= link_to edit_meeting_path(m), class: 'btn btn-info' do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= link_to m, class: 'btn btn-danger', method: :delete, data: {confirm: 'Weet je het zeker?'} do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<% if current_user.admin? %>
  <%= link_to 'Add vergadering', new_meeting_path, class: 'btn btn-block btn-primary' %>
<% end %>
