<%= form_for @meeting, html: {class: 'meeting-form form-horizontal'} do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, 'error') %> prohibited this meeting from being saved:</h2>

      <ul>
        <% @meeting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :agenda, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :agenda, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :onderwerp, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :onderwerp, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :datum, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :date, required: true, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :voorzitter, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :chairman_id, User.intern.collect {|x| [x.name, x.id]}, include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notulist, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :secretary_id, User.intern.collect {|x| [x.name, x.id]}, include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :aanwezigen, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :user_ids, User.intern.collect {|x| [x.name, x.id]}, {}, multiple: true %>
    </div>
  </div>
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :Verstuur, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
