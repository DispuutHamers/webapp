<% content_for :title do %>
  Activiteiten
  <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#uitlegbox">
    <i class="fas fa-calendar-alt"></i></button>
<% end %>


<div data-controller="tabs" data-tabs-active-tab="border-hamers-red-500 text-hamers-red-600 hover:border-hamers-red-600 hover:text-hamers-red-700">
  <div class="flex items-center justify-between">
    <div class="-mt-4">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8">
          <button data-action="click->tabs#change" data-tabs-target="tab" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
            Binnenkort
          </button>
          <button data-action="click->tabs#change" data-tabs-target="tab" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
            Vroeg√¢h
          </button>
        </nav>
      </div>
    </div>

    <div class="" data-controller="popover" data-popover-translate-x="-90%" data-popover-translate-y="0" data-action="mouseover->popover#mouseOver mouseout->popover#mouseOut">
      <span class="">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
        </svg>
      </span>
      <div class="content hidden absolute max-w-xs bg-gray-300 rounded p-2" data-popover-target="content">
          <p>iCal links voor je API keys:</p>
          <ul role="list" class="divide-y divide-gray-200">
            <% current_user.api_keys.each do |ak| %>
              <li class="py-2">
                <div class="flex space-x-3">
                  <div class="flex-1 space-y-1">
                    <div class="flex items-center justify-between">
                      <h3 class="text-sm font-medium"><%= ak.name %></h3>
                    </div>
                    <p class="text-sm text-gray-500"><%= request.base_url %>/ical/<%= ak.key %>.ics</p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>

  <div class="hidden" data-tabs-target="panel">
    <%= render "events/table", events: @upcoming_events %>
  </div>

  <div class="hidden" data-tabs-target="panel">
    <%= render "events/table", events: @past_events %>
    <%= will_paginate @past_events %>
  </div>
</div>

<div class="flex justify-center mt-5">
<%= button_to new_event_path, method: :get, class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  Nieuwe activiteit
<% end %>
</div>
