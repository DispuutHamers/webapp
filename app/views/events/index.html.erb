<h1>Activiteiten</h1>

<table class="events table table-hover">
  <thead>
    <tr>
      <th>Activiteit</th>
      <th>Datum</th>
      <th>Aanwezig</th>
      <% if current_user.admin? %>
      <th></th>
      <% end %>
      <th></th>
    </tr>
  </thead>

	<%= will_paginate %>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event %></td>
	<td><%= event.date.strftime("%d/%m/%Y") %>
        <td><% event.signups.where(status: true).each do |s| %>
            <%= s.user.name %>, 
            <% end %> 
            <% if !event.signups.where(status:true).contains(<current_user.name>) %>
              ..jij?
            <% end %>
        </td>
        <% if current_user == event.user or current_user.admin? or current_user.schrijf_feut? %>
        <td><%= link_to 'Wijzig', edit_event_path(event), :class => "btn btn-info" %>
        <% end %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Verwijder', event, method: :delete, data: { confirm: 'Weet je het zeker?' }, :class => "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<% if lid? %>
<div class="btn-group">
  <%= link_to 'Nieuwe activiteit', new_event_path, :class => "btn btn-primary" %>
</div>
<% end %>
