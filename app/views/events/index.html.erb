<h1>Activiteiten</h1>
<table class="events table table-hover">
  <thead>
  <tr>
    <th>Activiteit</th>
    <th>Datum</th>
    <th>Aanwezig</th>
    <th></th>
  </tr>
  </thead>
  <%= will_paginate %>
  <tbody>
  <% @events.each do |event| %>
      <% c = "info" if event.future? %>
      <% c = "active" if event.past? %>
      <% c = "success" if event.today? %>
      <tr class = "<%= c %>">
        <td><%= link_to event.title, event %></td>
        <td><%= event.date.strftime("%d/%m/%Y") %>
        <td>
          <% event.signups.where(status: true).each_with_index do |s, index| %><%= "," if index != 0 %>
              <%= s.user.name %><% end %><% if event.signups.where(status: true, user_id: current_user.id).empty? %>, ..jij?
          <% end %>
        </td>
        <td>
          <div class="btn-group">
            <% if current_user == event.user or current_user.admin? or current_user.schrijf_feut? %>
                <%= link_to 'Wijzig', edit_event_path(event), :class => "btn btn-info" %>
            <% end %>
            <% if current_user.admin? %>
                <%= link_to 'Verwijder', event, method: :delete, data: { confirm: 'Weet je het zeker?' }, :class => "btn btn-danger" %>
            <% end %>
          </div>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate %>
<% if lid? %>
    <%= link_to 'Nieuwe activiteit', new_event_path, class: "btn btn-block btn-primary" %>
<% end %>
