<div class="bg-white overflow-hidden sm:rounded-md">
  <ul role="list" class="divide-y divide-gray-200">
    <% events.each do |event| %>
      <li>
        <%= link_to event, class: "block hover:bg-gray-50" do %>
          <div class="px-4 py-4 flex items-center sm:px-6">
            <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
              <div class="truncate">
                <div class="text-sm min-w-0 flex-1 sm:flex sm:items-center">
                  <div class="flex">
                    <p class="font-medium text-gray-900 truncate"><%= event.title %></p>
                  </div>
                  <div class="flex flex-shrink-0 text-sm">
                    <% if event.public? %>
                      <p class="md:ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Publiek
                      </p>
                    <% end %>
                    <% if event.usergroup %>
                      <p class="md:ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <%= event.usergroup.name %>
                      </p>
                    <% end %>
                  </div>
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <div class="flex">
                    <%= heroicon('calendar', class_name: "flex-shrink-0 mr-1 h-4 w-4 text-gray-400 self-center") %>
                    <span>
                      <% if event.today? %>
                        <time><%= event.date.strftime('Vandaag om %H:%M') %></time>
                      <% else %>
                        <time><%= event.date.strftime('Op %d-%m-%Y om %H:%M') %></time>
                      <% end %>
                    </span>
                  </div>
                  <% unless event.location.blank? %>
                    <div class="flex">
                      <%= heroicon('location-marker', class_name: "flex-shrink-0 mr-1 ml-2 h-4 w-4 text-gray-400 self-center") %>
                      <span><%= event.location %></span>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="mt-4 flex-shrink-0 sm:mt-0 sm:ml-5">
                <div class="flex overflow-hidden -space-x-1">
                  <% event.signups.with_user.where(status: true).each do |s| %>
                    <%= gravatar_for s.user, class: "inline-block h-6 w-6 rounded-full ring-2 ring-white" %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="ml-5 flex-shrink-0">
              <!-- Heroicon name: solid/chevron-right -->
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
