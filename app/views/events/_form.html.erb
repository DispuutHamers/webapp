<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, 'error') %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex-grow w-full max-w-7md mx-auto lg:flex">
    <div class="flex-1 min-w-0 bg-white md:flex">
      <div class="border-b border-gray-200 pb-4 md:border-b-0 md:flex-shrink-0 md:w-1/4 md:-my-6 md:border-r md:border-gray-200 bg-white">
        <div class="h-full pl-4 pr-6 md:py-6 md:pl-0">
          <div class="h-full relative" style="min-height: 12rem;">
            <div class="mt-6 grid grid-cols-3 gap-y-6 gap-x-4">

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Titel
                </label>
                <div class="mt-1">
                  <%= f.text_field :title, class: input_classes %>
                </div>
              </div>

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Locatie
                </label>
                <div class="mt-1">
                  <%= f.text_field :location, class: input_classes %>
                </div>
              </div>

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Wanneer
                </label>
                <div class="mt-1">
                  <%= f.text_field :date,
                                   class: input_classes,
                                   data: {
                                     controller: "flatpickr",
                                     flatpickr_default_date: @event.date&.strftime("%d-%m-%Y %H:%M"),
                                     flatpickr_date_format: "d-m-Y H:i",
                                     flatpickr_enable_time: true,
                                     flatpickr_time_24hr: true
                                   } %>
                </div>
              </div>

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Tot
                </label>
                <div class="mt-1">
                  <%= f.text_field :end_time,
                                   class: input_classes,
                                   data: {
                                     controller: "flatpickr",
                                     flatpickr_default_date: @event.end_time&.strftime("%d-%m-%Y %H:%M"),
                                     flatpickr_date_format: "d-m-Y H:i",
                                     flatpickr_enable_time: true,
                                     flatpickr_time_24hr: true
                                   } %>
                </div>
              </div>

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Inschrijven sluit op
                </label>
                <div class="mt-1">
                  <%= f.text_field :deadline,
                                   class: input_classes,
                                   data: {
                                     controller: "flatpickr",
                                     flatpickr_default_date: @event.deadline&.strftime("%d-%m-%Y %H:%M"),
                                     flatpickr_date_format: "d-m-Y H:i",
                                     flatpickr_enable_time: true,
                                     flatpickr_time_24hr: true
                                   } %>
                </div>
              </div>

              <div class="col-span-3">
                <label class=<%= label_classes %>>
                  Groep (optioneel)
                </label>
                <%= f.select :usergroup_id, Usergroup.all.collect { |x| [x.name, x.id] }, { include_blank: true }, { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-hamers-red-500 focus:border-hamers-red-500 sm:text-sm rounded-md" } %>
              </div>

              <div class="flex items-start col-span-3 md:justify-between">
                <div class="flex items-center h-5">
                  <%= f.check_box :public, { checked: @event.invitation_code?, class: checkbox_classes } %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :public, class: "font-medium text-gray-700" do %>
                    <p>Publiek</p>
                    <span class="text-gray-500">Staan we plebs toe op deze activiteit?</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white lg:min-w-0 lg:flex-1">
        <div class="h-full py-6 px-4 sm:px-6 lg:pl-8">
          <div class="relative h-full">
            <%= f.rich_text_area :description, class: 'form-control', placeholder: 'Wat gaan we doen?' %>

            <div class="flex justify-center mt-5">
              <%= f.submit "Opslaan", class: submit_classes %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
