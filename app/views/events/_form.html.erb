<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= f.hidden_field :user_id %></div>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
		<%= f.label :end_time %>
		<%= f.date_select :end_time %>
  </div>
  
  <div class="field">
    <%= f.label :deadline, "Inschrijf deadline" %><br>
    <%= f.datetime_select :deadline %>
  </div>

  <div class="field">
    <%= f.text_area :beschrijving, placeholder: "Wat gaan we doen?" %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
