<% content_for :title do %>
  Recepten
<% end %>

<table class="tablesorter table table-hover">
  <thead>
    <tr>
      <th>Naam</th>
      <th>Soort</th>
      <th>Aantal x gebrouwen</th>
      <th>Aangemaakt op</th>
      <th>Bijgewerkt op</th>
    </tr>
  </thead>
  <%= render 'shared/pagination/default' %>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr data-link="<%= recipe_path(recipe) %>">
        <td><%= recipe.name %></td>
        <td><%= recipe.beer %></td>
        <td><%= recipe.brews.count %></td>
        <td><%= recipe.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= recipe.updated_at.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
  <%= render 'shared/pagination/default' %>
</table>
<%= link_to 'Schrijf een recept!', new_recipe_path, class: 'btn btn-block btn-primary' %>
