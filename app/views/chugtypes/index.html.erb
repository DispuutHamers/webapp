<% content_for :options do %>
  <div class="flex flex-row-reverse">
    <%= link_to 'Nieuwe categorie', new_chugtype_path, class: button_classes %>
  </div>
<% end %>

<div class="flex flex-col -m-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 dark:border-gray-700 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-100 dark:bg-black">
          <tr>
            <% ["Categorie", "Hoeveelheid", "Snelste tijd", "Aantal x gevouwen", "Aangemaakt op"].each do |x| %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                <%= x %>
              </th>
            <% end %>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Link</span>
            </th>
          </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <%= render @chugtypes %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination/default' %>
  </div>
</div>
