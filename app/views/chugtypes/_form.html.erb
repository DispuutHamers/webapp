<div>
  <%= form_for(@chugtype) do |f| %>
    <div class="space-y-4">
      <label class="<%= label_classes %>">
        Naam
      </label>
      <%= f.text_field :name, class: input_classes, required: true, minlength: 2, placeholder: "Bijv. Grolsch Beugel" %>
      <label class="<%= label_classes %>">
        Hoeveelheid (in ml)
      </label>
      <%= f.number_field :amount, class: input_classes, required: true, placeholder: "330" %>
    </div>

    <div class="flex justify-center mt-5">
      <%= f.submit "Opslaan", class: submit_classes %>
    </div>
  <% end %>
</div>
