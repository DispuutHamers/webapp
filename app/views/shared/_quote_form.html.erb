<div class="bg-white overflow-hidden md:shadow md:rounded-lg md:p-4">
    <h2 class="text-hamers-red-400 text-xl font-bold">Quote</h2>
    <div class="flex items-center mt-2">
      <%= form_for @quote, html: { class: "w-full" } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div>
          <div class="mt-1">
            <%= f.text_area :text,
                placeholder: 'Wat zei die lul?',
                rows: 2,
                class: 'shadow-sm focus:ring-hamers-red-500 focus:border-hamers-red-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md' %>
          </div>
        </div>
        <div class="col-span-6 sm:col-span-3">
          <% users_array = User.all.reverse.map { |user| [user.name, user.id] } %>
          <%= f.select :user_id, options_for_select(users_array), {}, class: select_classes %>
        </div>
        <div class="text-right mt-4 sm:w-full">
          <%= f.submit 'Citeer', class: 'text-center py-2 px-4 border border-transparent shadow-sm text-sm font-bold rounded-md text-white bg-hamers-red-500 hover:bg-hamers-red-600 focus:outline-none focus:ring-2 focus:ring-hamers-red-500' %>
        </div>
      <% end %>
    </div>
</div>
