<% if @random_beer %>
  <div class="media">
    <span class="media-left media-middle">
      <% if @random_beer.picture.present? %>
        <%= image_tag @random_beer.picture, class: "media-object gravatar img-rounded", style: "max-height: 75px;" %>
      <% else %>
        <%= image_tag 'beer_splash.jpg', class: "media-object gravatar img-rounded", style: "max-height: 75px;" %>
      <% end %>
    </span>
    <div class="media-body media-middle">
      <h4 class="media-heading"><%= link_to @random_beer.name, @random_beer %></h4>
      <span>
        Cijfer: <%= @random_beer.cijfer? %>
      </span>
      <span>
        <%= pluralize(@random_beer.reviews.count, 'review') %>
      </span>
    </div>
  </div>
<% end %>
