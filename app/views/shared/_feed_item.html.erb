<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user, class: 'gravatar img img-responsive' %>
  <span class="user">
   <%= link_to feed_item.user.name_with_nickname, feed_item.user %>
  </span>
  <span class="content">
    <%= feed_item.text %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(I18n.l feed_item.created_at) %> geleden.
  </span>
  <% if current_user.admin? %>
      <div class="btn-group">
        <%= link_to edit_quote_path(feed_item),
                    class: 'btn btn-default btn-sm' do %>
            <i class="fa fa-pencil"></i>
        <% end %>
        <%= link_to feed_item,
                    method: :delete,
                    data: {confirm: 'Weet je het zeker?'},
                    title: feed_item.text,
                    class: 'btn btn-default btn-sm' do %>
            <i class="fa fa-trash"></i>
        <% end %>
      </div>
  <% end %>
</li>
