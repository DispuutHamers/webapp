<% content_for :title do %>
    Openbare pagina's
<% end %>
<script type="text/javascript">
  $(document).ready(function () {
        $("#pages").tablesorter();
      }
  );
</script>
<table id="pages" class="tablesorter table table-hover">
  <thead>
  <tr>
    <th>openbaar</th>
    <th>title</th>
    <th>Admin stuff</th>
  </tr>
  </thead>
  <%= render 'shared/pagination/default' %>
  <tbody>
  <% @public_pages.each do |m| %>
      <tr>
        <td><%= m.public %></td>
        <td><%= link_to m.title, '/' + m.title %></td>
        <td>
          <div class="btn-group">
            <%= link_to edit_public_page_path(m), class: 'btn btn-info' do %>
                <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to m, class: 'btn btn-danger', method: :delete, data: {confirm: 'Weet je het zeker?'} do %>
                <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= render 'shared/pagination/default' %>
<%= link_to 'Voeg openbare pagina toe', new_public_page_path, class: 'btn btn-primary btn-block' %>
