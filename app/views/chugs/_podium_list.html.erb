<ul role="list" class="divide-y divide-gray-200">
  <% if chugs.count >= 3 %>
    <% chugs.each_with_index do |chug, index|  %>
      <% if index == 0 %>
        <li class="flex items-center justify-center">
          <div class="relative py-4 w-80 h-72">
            <img class="w-28 h-28 absolute z-10 ml-28" src="/img/medal_gold.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "absolute z-20 gravatar gold-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center absolute gold-text w-24 text-sm"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
              <br> <i class="text-sm"><%= chug.user.name %></i></p>
            </div>
      <% elsif index == 1 %>
            <img class="w-28 h-28 absolute z-10 mt-12" src="/img/medal_silver.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "absolute z-20 gravatar silver-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center absolute silver-text w-24 text-sm"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
                <br> <i class="text-sm"><%= chug.user.name %></i></p>
            </div>
      <% elsif index == 2 %>
            <img class="w-28 h-28 absolute z-10 ml-56 mt-24" src="/img/medal_bronze.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "absolute z-20 gravatar bronze-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center absolute bronze-text w-24 text-sm"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
                <br> <i class="text-sm"><%= chug.user.name %></i></p>
            </div>
          </div>
        </li>
      <% else %>
        <%= render 'chugs/chug', chug: chug %>
      <% end %>
    <% end %>
  <% else %>
    <%= render chugs %>
    <div class="py-4 pb-4">
      <i>
        Er moeten minimaal 3 keer geadt zijn om het scorebord te kunnen zien.
      </i>
    </div>
  <% end %>
</ul>

<style>
  .gravatar {
      width: 70px;
      height: 70px;
  }

  .gold-gravatar { margin-top: 24px; margin-left: 137px; }
  .silver-gravatar { margin-top: 74px; margin-left: 22px; }
  .bronze-gravatar { margin-top: 122px; margin-left: 246px; }

  .gold-text {
      margin-top: 275px;
      margin-left: 22px;
  }
  .silver-text {
      margin-top: 380px;
      margin-left: -205px;
  }
  .bronze-text {
      margin-top: 455px;
      margin-left: 215px;
  }
</style>
