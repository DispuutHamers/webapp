<ul role="list" class="divide-y divide-gray-200">
  <% if chugs.count >= 3 %>
    <% chugs.each_with_index do |chug, index|  %>
      <% if index == 0 %>
        <li class="flex items-center justify-center">
          <div class="podium py-4">
            <img class="medal gold" src="/img/medal_gold.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "gravatar gold-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center gold-text" style="width: 100px; line-height: 1.1rem"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
              <br> <i style="font-size: 0.85rem;"><%= chug.user.name %></i></p>
            </div>
      <% elsif index == 1 %>
            <img class="medal silver" src="/img/medal_silver.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "gravatar silver-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center silver-text" style="width: 100px; line-height: 1.1rem"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
                <br> <i style="font-size: 0.85rem;"><%= chug.user.name %></i></p>
            </div>
      <% elsif index == 2 %>
            <img class="medal bronze" src="/img/medal_bronze.png" alt="Gold medal">
            <%= link_to chug.user, class: "self-center" do %>
              <% gravatar_for chug.user, class: "gravatar bronze-gravatar rounded-full" %>
            <% end %>
            <div class="flex items-center justify-center">
              <p class="text-center bronze-text" style="width: 100px; line-height: 1.1rem"><strong><%= chug.secs %>.<%= sprintf("%02d", chug.milis) %></strong>s
                <br> <i style="font-size: 0.85rem;"><%= chug.user.name %></i></p>
            </div>
          </div>
        </li>
      <% else %>
        <%= render 'chugs/chug', chug: chug %>
      <% end %>
    <% end %>
  <% else %>
    <%= render chugs %>
    <div class="py-4 pb-4">
      <i>
        Er moeten minimaal 3 adtjes zijn om het scorebord te kunnen zien.
      </i>
    </div>
  <% end %>
</ul>

<style>
  .podium {
      position: relative;
      width: 320px;
      height: 290px;
  }
  .medal {
      position: absolute;
      width: 110px;
      height: 110px;
      z-index: 1;
  }
  .gold { margin-left: 115px; margin-top: 0; }
  .silver { margin-left: 0; margin-top: 50px; }
  .bronze { margin-left: 210px; margin-top: 90px; }

  .gravatar {
      position: absolute;
      height: 68px;
      width: 68px;
      z-index: 2;
  }

  .gold-gravatar { margin-top: 24px; margin-left: 137px; }
  .silver-gravatar { margin-top: 74px; margin-left: 22px; }
  .bronze-gravatar { margin-top: 115px; margin-left: 232px; }

  .gold-text {
      position: absolute;
      margin-top: 275px;
      margin-left: 22px;
  }
  .silver-text {
      position: absolute;
      margin-top: 380px;
      margin-left: -205px;
  }
  .bronze-text {
      position: absolute;
      margin-top: 450px;
      margin-left: 215px;
  }
</style>
