<% content_for :options do %>
  <div class="flex flex-row-reverse">
    <%= link_to 'Nieuwe categorie', new_chug_type_path, class: "px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-hamers-red-500" %>
  </div>
<% end %>

<div class="flex flex-col mt-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Categorie
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Hoeveelheid
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Aantal x gevouwen
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Aangemaakt op
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Link</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @chug_types.each do |chug_type| %>
              <tr onclick='Turbo.visit("<%= chug_type_path(chug_type) %>")' class="hover:bg-gray-50 cursor-pointer">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= chug_type.name %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500">
                  <%= chug_type.amount %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500">
                  <%= chug_type.chugs.count %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500">
                  <%= chug_type.created_at.strftime("%d-%m-%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to chug_type, class: "float-right" do %>
                    <%= heroicon('chevron-right', class_name: "flex-shrink-0 h-5 w-5 text-gray-400") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= render 'shared/pagination/default' %>
      </div>
    </div>
  </div>
</div>
