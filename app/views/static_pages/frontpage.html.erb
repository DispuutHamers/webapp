<main class="mx-auto my-48 max-w-7xl px-4">
  <div class="text-center">

    <img class="mx-auto mb-24 w-48" src="<%= image_path('logo_transparant_background.png') %>" alt="Hamers logo">

    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
      <span class="block text-hamers-yellow-500 xl:inline">Hamers zonder Sikkel</span>
    </h1>
    <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      defenestraties voorbehouden
    </p>
    <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
      <div class="rounded-md shadow">
        <%= link_to 'Log in', signin_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-hamers-red-600 hover:bg-hamers-red-700 md:py-4 md:text-lg md:px-10" %>
      </div>
      <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
        <%= link_to 'Registreer', activate_account_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-hamers-red-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10" %>
      </div>
    </div>
  </div>
</main>

<%= yield %>
