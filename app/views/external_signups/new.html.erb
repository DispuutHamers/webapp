<% content_for :title do %>
  Schrijf je in voor <%= @event.title %>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default" style="margin-top: 32px;">
      <div class="panel-heading">
        <h2 class="panel-title">Informatie over de activiteit</h2>
      </div>
      <div class="panel-body">
        <i class="far fa-clock"></i> <%= @event.date.strftime('%d-%m-%Y %H:%M') %>
        <%= "tot #{@event.end_time.strftime('%d-%m-%Y %H:%M')}" if @event.end_time? %>
        <hr>
        <i class="fa fa-map-marker"></i> Locatie: <%= @event.location %>
        <hr>
        <%= @event.description %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <% if @event.open? %>
      <h2 class="text-center" style="margin-bottom: 24px;">Schrijf je in!</h2>
      <%= render "form" %>
    <% else %>
      <div class="alert alert-info" style="margin-top: 32px;">
        Het is helaas niet meer mogelijk je in te schrijven voor deze activiteit.
      </div>
    <% end %>
  </div>
</div>
