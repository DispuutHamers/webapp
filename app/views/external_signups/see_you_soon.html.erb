<% content_for :title do %>
  Bedankt voor je inschrijving!
<% end %>

<div class="row dark:text-gray-200">
  <div class="col-md-6">
    <div class="panel panel-default" style="margin-top: 32px;">
      <div class="panel-body">
      <div class="border-b dark:border-gray-700 mb-2 pb-2">
        <i class="far fa-clock mr-2"></i> <%= @event.date.strftime('%d-%m-%Y %H:%M') %>
        <%= "tot #{@event.end_time.strftime('%d-%m-%Y %H:%M')}" if @event.end_time? %>
      </div>  
      <div class="border-b dark:border-gray-700 mb-2 pb-2">
        <i class="fa fa-map-marker mr-2"></i> Locatie: <%= @event.location %>
      </div>
      <div class="border-b dark:border-gray-700 mb-2 pb-2">
        <%= @event.description %>
      </div>
        <%= link_to "#{@event.title}.ics?invitation_code=#{@event.invitation_code}", class: "btn btn-default" do %>
          <i class="fas fa-calendar-plus mr-2"></i> Toevoegen aan je kalender
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="alert alert-success" style="margin-top: 32px;">
      <strong>Gelukt!</strong> Je bent succesvol ingeschreven. Tot snel!
    </div>
  </div>
</div>
