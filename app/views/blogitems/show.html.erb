<% content_for :title do %>
  <%= @item.title %>
<% end %>
<div class="row">
  <div class="col-md-9">
    <% if @item.actiontext_body.blank? %>
      <%= markdown(@item.body).html_safe unless @item.body == nil %>
    <% else %>
      <%= @item.actiontext_body %>
    <% end %>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @user %>
          Blogpost door: <i><%= link_to @user.name, @user %></i>
          <hr>
        <% end %>

        <% if @item.blogphotos.any? %>
          <% @item.blogphotos.each do |p| %>
            <%= image_tag p.image.url(:medium) %> <br>
          <% end %>
          <hr>
        <% end %>

        <div class="btn-group btn-group-vertical">
          <% if current_user&.admin? || (current_user && current_user.id == @item.user_id) %>
            <%= link_to edit_blogitem_path(@item), class: 'btn btn-default btn-sm' do %>
              <i class="fas fa-pencil-alt"></i> Wijzig blogpost
            <% end %>
            <%= link_to @item, method: :delete, data: { confirm: 'Weet je het zeker?' }, class: 'btn btn-default btn-sm' do %>
              <i class="far fa-trash-alt"></i> Verwijder blogpost
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
