<h2 class="text-2xl mt-4 text-center"><%= @user.name %> is lid van:</h2>
<div class="mt-4">
  <div class="list-container">
    <% @member.each_with_index do |group, index| %>
      <div class="list-items flex flex-col sm:flex-row items-center justify-between max-w-lg mx-auto border-b py-4 dark:bg-gray-700 my-1 px-4">
        <div class="flex flex-row items-center space-x-4">
          <h1 class="tracking-tight dark:text-gray-100"><%= group.name %></h1>
        </div>
        <% if current_user.admin? %>
          <div>
            <%= form_for(@user.groups.find_by(group_id: group.id, user_id: @user.id), html: {method: :delete}) do |f| %>
              <%= f.hidden_field :group_id %>
              <%= f.hidden_field :user_id %>
              <button type="submit" class="bg-red-100 rounded-md px-4 py-1 text-red-800 text-sm font-semibold mt-4 sm:mt-0">
                <%= heroicon('trash', style: :outline, class_name: "h-4 w-4 inline-block") %>Verwijder
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% if current_user.admin? %>
  <h2 class="text-2xl mt-4 text-center"><%= @user.name %> is GEEN lid van:</h2>
  <div class="mt-4">
    <div class="list-container">
      <% @notmember.each_with_index do |group, index| %>
        <div class="list-items flex flex-col sm:flex-row items-center justify-between max-w-lg mx-auto border-b py-4 dark:bg-gray-700 my-1 px-4">
          <div class="flex flex-row items-center space-x-4">
            <h1 class="tracking-tight dark:text-gray-100"><%= group.name %></h1>
          </div>
          <div>
            <%= form_for(@user.groups.new(group_id: group.id, user_id: @user.id)) do |f| %>
              <%= f.hidden_field :group_id %>
              <%= f.hidden_field :user_id %>
              <button type="submit" class="bg-green-100 rounded-md px-4 py-1 text-green-800 text-sm font-semibold mt-4 sm:mt-0">
                <%= heroicon('plus', style: :outline, class_name: "h-4 w-4 inline-block") %>Voeg toe
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
