<% content_for :title do %>
  Bieren
<% end %>

<div class="row">
  <div class="col-md-6">
    <%= will_paginate %>
  </div>
  <div class="col-md-6">
    <div class="pagination">
      <div class="pagination">
        <%= form_for 'search', class: "form-horizontal", url: beer_search_path do |f| %>
          <div class="input-group" id="adv-search">
            <% if @sp %>
              <%= f.text_field :terms, class: 'form-control', value: @sp %>
            <% else %>
              <%= f.text_field :terms, class: 'form-control', placeholder: 'Vind hier, je bier' %>
            <% end %>
            <div class="input-group-btn">
              <div class="btn-group" role="group">
                <%= f.submit "Zoek", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<table id="bier" class="tablesorter table table-hover">
  <thead>
    <tr>
      <th>Naam</th>
      <th>Soort</th>
      <th>Cijfer</th>
      <th>Brouwer</th>
      <th>Land</th>
      <th>Aantal reviews</th>
      <% if current_user&.admin? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <% if current_user %>
        <% if beer.reviews.where('user_id = ?', current_user.id).empty? %>
          <tr class="default">
          <% elsif beer.reviews.where('user_id = ?', current_user.id).take.rating > 6 %>
            <tr class="success">
            <% elsif beer.reviews.where('user_id = ?', current_user.id).take.rating > 4 %>
              <tr class="info">
              <% else %>
                <tr class="danger">
                <% end %>
              <% end %>
              <td><%= link_to beer.name, beer %></td>
              <td><%= beer.soort %></td>
              <td><%= beer.cijfer? %></td>
              <td><%= beer.brewer %></td>
              <td><%= beer.country %></td>
              <td><%= beer.reviews.count %></td>
              <% if current_user&.active? %>
                <td>
                  <%= link_to 'Verwijder', beer, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
              <% end %>
                </tr>
              <% end %>
  </tbody>
</table>

<% if current_user&.active? %>
  <%= link_to 'Nieuw bier', new_beer_path, :class => 'btn btn-block btn-primary btn-sm' %>
<% end %>
