<h1>Biertjes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Soort</th>
      <th>Cijfer</th>
      <th></th>
      <% if current_user.admin? %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.soort %></td>
        <td><%= beer.cijfer? %></td>
        <td></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Beer', new_beer_path %>
