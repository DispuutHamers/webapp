<%= content_for :title do %>
  Registreren
<% end %>

<%= render layout: 'layouts/small_width' do %>
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-user-o"></i></span>
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Naam" %>
    </div>
    &nbsp;
    <div class="input-group">
      <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
      <%= f.email_field :email, autofocus: false, class: "form-control", readonly: true %>
    </div>
    &nbsp;
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-key"></i></span>
      <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "wachtwoord" %>
    </div>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    &nbsp;
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-key"></i></span>
      <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "form-control", placeholder: "bevestig wachtwoord" %>
    </div>
    <br>
    <%= link_to "Privacy Statement", "/privacy" %>
    <div class="actions">
      <p><%= f.submit t('devise.invitations.edit.submit_button'), class: 'btn btn-large btn-success' %></p>
    </div>
  <% end %>
<% end %>
