<%= render layout: 'layouts/small_width' do %>
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put, :class => "-mt-16"} do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token, readonly: true %>
  
    <div>
      <%= f.label :name, class: label_classes %>
      <div class="mt-1">
        <%= f.text_field :name, class: input_classes, placeholder: "name" %>
      </div>
    </div>

    <div>
      <%= f.label :email, class: label_classes %>
      <div class="mt-1">
        <%= f.email_field :email, class: input_classes, placeholder: "Email" %>
      </div>
    </div>

    <div>
      <%= f.label :password, class: label_classes %>
      <div class="mt-1">
        <%= f.password_field :password, autocomplete: "off", type: "password", class: input_classes, placeholder: "wachtwoord" %>
      </div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  
    <div>
      <%= f.label :password_confirmation, class: label_classes %>
      <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: input_classes, placeholder: "bevestig wachtwoord" %>
    </div>

    <%= link_to "Privacy Statement", "/privacy" %>
      
    <%= f.submit "Sla op en wordt ğŸ”¨ğŸ”¨ğŸ’©ğŸ‘¶", class: submit_classes %>
  <% end %>
<% end %>
