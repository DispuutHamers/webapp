<% content_for :title do %>
  Recepten
<% end %>

<% content_for :options do %>
  <div class="flex flex-row-reverse">
    <%= link_to 'Nieuw recept', new_recipe_path, class: button_classes %>
  </div>
<% end %>

<div class="flex flex-col mt-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 dark:border-gray-700 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-100 dark:bg-black">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                Naam
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                Soort
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                Aantal x gemaakt
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                Aangemaakt op
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">
                Bijgewerkt op
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Link</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @recipes.each do |recipe| %>
              <tr onclick='Turbo.visit("<%= recipe_path(recipe) %>")' class="hover:bg-gray-50 dark:hover:bg-gray-800 cursor-pointer">
                <td class="px-6 py-4 whitespace-nowrap dark:text-gray-200">
                  <%= recipe.name %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500 dark:text-gray-400">
                  <%= recipe.beer %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500 dark:text-gray-400">
                  <%= recipe.brews.count %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500 dark:text-gray-400">
                  <%= recipe.created_at.strftime("%d-%m-%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-normal text-sm text-gray-500 dark:text-gray-400">
                  <%= recipe.updated_at.strftime("%d-%m-%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to recipe, class: "float-right" do %>
                    <%= heroicon('chevron-right', class_name: "flex-shrink-0 h-5 w-5 text-gray-400") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= render 'shared/pagination/default' %>
      </div>
    </div>
  </div>
</div>
